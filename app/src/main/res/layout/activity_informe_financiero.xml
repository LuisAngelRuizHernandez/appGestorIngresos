<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InformeFinanciero">

    <TextView
        android:id="@+id/totalGastosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Gastos: "
        android:textSize="18sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/totalIngresosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Ingresos: "
        android:textSize="18sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/saldoActualTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Saldo Actual: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informe financiero" />


</LinearLayout>